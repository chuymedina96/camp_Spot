<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Yelpcamp</p>
            <div class="list-group">
                <li class="list-group-item active">Info one</li>
                <li class="list-group-item">Info two</li>
                <li class="list-group-item">Info three</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= campground.image %>"/>
                <div class="captionfull">
                    <h4 class="pull-right">$9.00/night</h4>
                    <h4><a><%= campground.name %></a></h4>
                </div>
                <h3><%= campground.description %></h3> 
            </div>
        </div>
    </div>
</div>
<p>
    <a class="btn btn-success" href="/campgrounds/<%= campground._id %>/comments/new">Add a new comment</a>
</p>
<% campground.comments.forEach(function(comment){ %>
        <p> 
            <strong><%= comment.author %></strong> - <%= comment.text %>
        </p>
<% }); %>    
<% include ../partials/footer %>